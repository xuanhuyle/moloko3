<h1>Welcome, <%= @user.first_name %> <%= @user.last_name %> (Customer)</h1>

<%= link_to 'Log Out', destroy_user_session_path, method: :delete, data: { 'turbolinks' => false }, class: 'btn btn-danger' %>

<h2>Your Profile</h2>
<p><strong>Email:</strong> <%= @user.email %></p>

<h2>Your Posted Jobs</h2>
<% @jobs.each do |job| %>
  <div>
    <h3><%= link_to job.title, job_path(job) %></h3>
    <p><strong>Location:</strong> <%= job.location %></p>
    <p><strong>Status:</strong> <%= job_status(job) %></p> <!-- Custom helper to display status -->
  </div>
<% end %>

<h2>Your Cases (Past and Present)</h2>
<% @cases.each do |case_record| %>
  <div>
    <h3><%= case_record.title %></h3>
    <p><strong>Lawyer:</strong> <%= case_record.lawyer.first_name %> <%= case_record.lawyer.last_name %></p>
  </div>
<% end %>

<h2>Your Lawyers</h2>
<% @lawyers.each do |lawyer| %>
  <div>
    <p><strong>Lawyer:</strong> <%= lawyer.first_name %> <%= lawyer.last_name %></p>
  </div>
<% end %>
